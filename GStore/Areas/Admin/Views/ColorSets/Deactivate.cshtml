@model GStore.Models.ViewModels.ColorSetVM

@{
    ViewData["Title"] = "Деактивиране на Цвят";
}

<h1>Деактивиране на Цвят</h1>
<br />
<h3>Сигурен ли сте, че искате да деактивирате този цвят?</h3>
<br />
<div>
    <h4>Цвят</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ColorCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ColorCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <text>Активен Статус:</text>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    <form asp-action="Deactivate">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Деактивирай" class="btn btn-danger" /> |
        <a asp-action="Index">Отказ и oбратно към листа с цветове</a>
    </form>
</div>
