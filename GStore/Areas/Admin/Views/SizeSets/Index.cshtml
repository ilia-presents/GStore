@model IEnumerable<GStore.Models.ViewModels.SizeSetVM>

@{
    ViewData["Title"] = "Размери";
}

<h1>Списък Размери</h1>
<br />
<p>
    <a asp-area="Admin" asp-controller="SizeSets" asp-action="Create">Създай Нов Размер</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
            </td>
                <td>
                    @if (item.IsActive)
                    {
                        <text><span class="checkmarks">&#10004;</span></text>
                    }
                    else
                    {
                        <text><span class="checkmarks">&#10060;</span></text>
                    }
                </td>
            <td>
                <a asp-area="Admin" asp-controller="SizeSets" asp-action="Edit" asp-route-id="@item.Id">Редакция</a> |

                @if (item.IsActive)
                {
                        <a asp-area="Admin" asp-controller="Shirts" asp-action="ChangeStatus" asp-route-id="@item.Id">Деактивирай</a>
                }
                else
                {
                        <a asp-area="Admin" asp-controller="Shirts" asp-action="ChangeStatus" asp-route-id="@item.Id">Активирай</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
