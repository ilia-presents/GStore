@model GStore.Models.ViewModels.L1SetVM

@{
    ViewData["Title"] = "Редкция на Категория Първо Ниво";
}

<h1>Редкция на Категория Първо Ниво</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div>
                <div>
                        <text>Активен Статус:</text>
                </div>
                <div>
                        <strong>@(Model.IsActive ? "Активна" : "Деактивирана")</strong>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Редакация" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Отказ и обратно към листа с категории</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
